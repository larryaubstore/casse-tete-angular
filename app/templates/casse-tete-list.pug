include mixins/errorpanel.pug

button.errorcount(type='button', class='btn btn-danger', [style.display]="countererrors > 0  ? 'block' : 'none'")='{{countererrors}}'
button.errorcount(type='button', class='btn btn-success', [style.display]="countererrors <= 0 ? 'block' : 'none'")='{{countererrors}}'

.container-fluid([class.fullscreen]="fullscreen")
  .row
    .col-md-2([style.display]="fullscreen === false  ? 'block' : 'none'")



    .col-md-12#maincontainer
      #puzzle.invisible(style='margin: 0 auto;height:100%;overflow:hidden;', [style.width]="getTotalWidth()")
        .tilewrapper
          .position
            //div( *ngFor="let puzzle of puzzles")
            casse-tete(*ngFor="let puzzle of puzzles", [puzzle]="puzzle", [parent]="me")
              .loader.centerdiv
            //  casse-tete([puzzle]="puzzle")
            //
            //
            //
        .controlpanel
          label.invisible(for="inputRow")='# de pièces'
          .input-group
            input( id="inputRow", data-slider-id='ex1Slider', type="text", data-slider-min="0", data-slider-max="60", data-slider-step="1", data-slider-value="20", disabled)
           
          label.invisible(for="inputMargin")='Marges'
          .input-group
            input( id="inputMargin", data-slider-id='exMarginSlider', type="text", data-slider-min="0", data-slider-max="30", data-slider-step="1", data-slider-value="9", disabled)

          label.invisible(for="inputWidth")='Largeur des tuiles'
          .input-group.invisible
            input( id="inputWidth", data-slider-id='exWidthSlider', type="text", data-slider-min="0", data-slider-max="300", data-slider-step="5", data-slider-value="150", disabled)

          label.invisible(for="inputHeight")='Hauteur des tuiles'
          .input-group.invisible
            input( id="inputHeight", data-slider-id='exHeightSlider', type="text", data-slider-min="0", data-slider-max="300", data-slider-step="5", data-slider-value="105", disabled)

          label.invisible(for="inputScale")='Facteur d\'agrandissement'
          .input-group.disabled
            input( id="inputScale", data-slider-id='exScaleSlider', type="text", data-slider-min="0", data-slider-max="300", data-slider-step="5", data-slider-value="50", disabled)

          // +errorpanel(0)
          //
          button#noborder(type='button', class='btn btn-info', [style.display]="noborder === true  ? 'block' : 'none'")='Sans bordure'
          button#withborder(type='button', class='btn btn-info', [style.display]="noborder === false  ? 'block' : 'none'")='Avec bordure'
          button#fullscreen(type='button', class='btn btn-info', [style.display]="fullscreen === false  ? 'block' : 'none'")='Plein écran'

          button#showpos(type='button', class='btn btn-info', [style.display]="showpos === true  ? 'block' : 'none'")='Sans position'
          button#dontshowpos(type='button', class='btn btn-info', [style.display]="showpos === false  ? 'block' : 'none'")='Position'
